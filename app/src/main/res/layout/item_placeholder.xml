<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/deletelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete?"
            android:layout_margin="@dimen/margin_18"
            android:textColor="@android:color/holo_red_dark"
            />

    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/email_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_10"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_3">

            <TextView
                android:id="@+id/home_participant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/star"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="David Hume jhjsd jsdhfjsd jsdhfj jsdhfjs sjdhfjs sjdfhjsd dfhjsd"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_16"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/margin_15"
                android:src="@drawable/star" />

        </RelativeLayout>

        <TextView
            android:id="@+id/home_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="With regard to our conversation earlier today"
            android:textColor="@color/subject_text"
            android:textSize="@dimen/text_14" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_3">

            <TextView
                android:id="@+id/home_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/ts"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Hello, can you please send a quote for Critique of Judgement"
                android:textColor="@color/preview_text"
                android:textSize="@dimen/text_13" />

            <TextView
                android:id="@+id/ts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/margin_15"
                android:singleLine="true"
                android:text="1h"
                android:textColor="@color/preview_text"
                android:textSize="@dimen/text_13" />

        </RelativeLayout>

    </LinearLayout>


</FrameLayout>

    <!--</android.support.v7.widget.CardView>-->